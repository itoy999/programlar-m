#include <iostream>
#include <math.h>

/* Bir arkadasimin onerisi uzerine tasaklari sikin sapinin karekoku kadar satÄ±r assa indirdik daha da harika oldu*/
/* Sonuna bir seyler ekledim*/

int main() {
	int i,j;
	int n,k;
	
	printf("Basi kac satir olsun?\n");
	scanf("%d",&n);
	printf("Sapi kac satir olsun?\n");
	scanf("%d",&k);
	
	
	for(i=n/2-1;i<n;i++)
	{
	    for(j=0;j<n-i;j++)
	    {
	    	printf(" ");
		}
		for(j=0;j<2*i+3;j++)
		{
			printf("*");
		}
		printf("\n");
	}
	printf(" ");
	for(i=0;i<2*n+1;i++)
	{
		printf("*");
	}
	printf("\n");
	
	for(i=0;i<k;i++)
	{
	    printf("  ");
		for(j=0;j<2*n-1;j++)
		{
			printf("*");
		}
		printf("\n");
	}
	
	for(i=0;i<sqrt(k);i++)
	{
		printf(" ");
		for(j=0;j<n;j++)
		{
			printf("*");
		}
		printf(" ");
		for(j=0;j<n;j++)
		{
			printf("*");
		}
		printf("\n");
	}
if(k>10)
{
if((k/n)>3)
printf("Bu cok ince, neyine yetecek?");
else if(k/n<1)
printf("Cok kalin.");
else
printf("Duzgun bir seciminiz var.");
}
else
{
	printf("Bu neye yeter lan");
}
}
